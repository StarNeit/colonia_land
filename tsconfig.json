{
    "compilerOptions": {
        "target": "es2016",
        "module": "esnext",
        "importHelpers": true,
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": [
            "vite/client",
        ],
        "baseUrl": ".",
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
